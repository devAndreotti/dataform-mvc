@model usuarios

<!DOCTYPE html>
<html lang="pt-BR">

<head>
    <!-- Definições de estilo e meta tags essenciais -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="author" content="Ricardo Andreotti Gonçalves">
    <meta name="keywords" content="Cadastro, Usuário, Login"> <!-- Adicionei palavras-chave relevantes -->
    <link rel="stylesheet" href="~/css/styleCadastre.css">
    <meta charset="UTF-8">
    <title>Cadastro - Innovation Degree</title> <!-- Título mais descritivo -->
</head>

<body>

    <!-- Botão para retornar à página inicial -->
    <div class="back-button-container">
        <a asp-area="" asp-controller="home" asp-action="Index" class="back-button">VOLTAR</a>
    </div>

    <!-- Conteúdo principal da página -->
    <main id="cadastro-content">
        <div id="cadastro-form">
            <div class="main">
                <div class="right">
                    <div class="card">
                        <h2 class="ice">Cadastro de usuário:</h2>

                        <div class="container w-50 jumbotron">
                            <!-- Formulário de cadastro -->
                            <form action="Cadastro" method="POST">
                                <br>

                                <!-- Campo para nome do usuário -->
                                <div class="textfield">
                                    <label asp-for="nome">Nome do usuário:</label>
                                    <input class="form-control estilo-input" asp-for="nome" type="text" required placeholder="Informe seu nome"/>
                                </div>

                                <br>

                                <!-- Campo para login do usuário -->
                                <div class="textfield">
                                    <label asp-for="login">Login do usuário:</label>
                                    <input class="form-control estilo-input" asp-for="login" type="text" required placeholder="Pense em um login"/>
                                </div>

                                <br>

                                <!-- Campo para senha do usuário -->
                                <div class="textfield">
                                    <label asp-for="senha">Senha do usuário:</label>
                                    <input class="form-control estilo-input" asp-for="senha" type="password" required placeholder="Crie uma boa senha"/> <!-- Alterei para type="password" para ocultar a senha -->
                                </div>

                                <br>

                                <!-- Campo para data de nascimento do usuário -->
                                <div class="textfield">
                                    <label asp-for="nascimento">Data de nascimento do usuário:</label>
                                    <input class="form-control estilo-input" asp-for="nascimento" type="date" required placeholder="Nos diga a data"/>
                                </div>

                                <br>
                                <br>

                                <!-- Botão de submissão do formulário -->
                                <input class="btn" type="submit" value="Cadastrar"/>

                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>

</body>
</html>